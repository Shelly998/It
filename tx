# Importazione delle librerie necessarie
import pandas as pd

# Caricamento dei dati dal file CSV
dati = pd.read_csv('nome_del_tuo_file.csv')

# Visualizzazione delle prime righe del dataframe
print("Primi 5 record del dataframe:")
print(dati.head())

# Informazioni sulle colonne e tipi di dati
print("\nInformazioni sulle colonne:")
print(dati.info())

# Statistiche descrittive
print("\nStatistiche descrittive:")
print(dati.describe())

# Numero di valori unici in ciascuna colonna
print("\nNumero di valori unici in ciascuna colonna:")
print(dati.nunique())

# Gestione dei valori nulli
print("\nGestione dei valori nulli:")
print(dati.isnull().sum())

